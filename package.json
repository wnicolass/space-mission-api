{
  "name": "space-mission-api",
  "version": "1.0.0",
  "description": "Space mission API project based on the NASA Mission Control ztm's project.",
  "main": "index.js",
  "scripts": {
    "start": "node dist/server.js",
    "start:dev": "ts-node-dev --respawn --watch src src/server.ts",
    "build": "tsup src",
    "build:start": "npm run build && npm start",
    "test": "dotenv -e .env.test -- npx prisma migrate reset --force && dotenv -e .env.test -- vitest run",
    "test:dev": "dotenv -e .env.test -- vitest --watch",
    "test:migrate": "dotenv -e .env.test -- npx prisma migrate dev",
    "test:coverage": "dotenv -e .env.test -- npx prisma migrate reset --force && dotenv -e .env.test -- vitest run --coverage",
    "ci": "npm install && npm run build:start",
    "ci:test": "npx prisma migrate reset --force && vitest run",
    "cert": "ts-node ./src/config/https/generate-cert.ts"
  },
  "keywords": [],
  "author": "Nicolas Lima",
  "license": "MIT",
  "prisma": {
    "seed": "ts-node --transpile-only prisma/seed.ts"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "@tsconfig/node20": "^1.0.1",
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.17",
    "@types/morgan": "^1.9.4",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.3.1",
    "@types/supertest": "^2.0.12",
    "@types/validator": "^13.7.17",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "@vitest/coverage-v8": "^0.34.1",
    "dotenv-cli": "^7.2.1",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard-with-typescript": "^35.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "prettier": "^2.8.8",
    "prisma": "^4.15.0",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsup": "^6.7.0",
    "typescript": "^5.1.3",
    "vitest": "^0.32.2"
  },
  "dependencies": {
    "@prisma/client": "^4.15.0",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.40.0",
    "csv-parse": "^5.4.0",
    "express": "^4.18.2",
    "jose": "^4.14.4",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "validator": "^13.9.0",
    "zod": "^3.21.4"
  }
}
